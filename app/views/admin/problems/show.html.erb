<h1><%= @problem.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @problem.description %>
</p>

<p>
  <strong>Timeout:</strong>
  <%= @problem.timeout %>
</p>

<p>
  <strong>Has Input?</strong>
  <%= @problem.has_input %>
</p>

<p>
  <strong>Auto Judge?</strong>
  <%= @problem.auto_judge %>
</p>

<p>
  <strong>Ignore Case?</strong>
  <%= @problem.ignore_case %>
</p>

<p>
  <strong>Whitespace Rule:</strong>
  <%= @problem.whitespace_rule %>
</p>

<table class="table table-striped">
  <caption>Attachments</caption>
  <thead>
    <tr>
      <th scope="col">Filename</th>
      <th scope="col">Type</th>
      <th scope="col">Content Type</th>
      <th class="actions" scope="col" colspan="2">Actions</th>
    </tr>
  </thead>

  <% @problem.attachments.each do |attachment| %>
      <tbody>
        <tr>
          <th scope="row"><%= attachment.original_filename %></th>
          <td><%= attachment.attachment_type %></td>
          <td><%= attachment.content_type %></td>
          <td><%= link_to 'Download', attachment %></td>
          <td><%= link_to 'Delete',
                          admin_attachment_path(attachment),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      </tbody>
    <br>
  <% end %>
</table>

<%= link_to 'Edit', edit_admin_problem_path(@problem), class: 'btn btn-primary' %>
<%= link_to 'Back', admin_problems_path, class: 'btn btn-secondary' %>
