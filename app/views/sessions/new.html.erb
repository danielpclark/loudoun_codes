<%= simple_form_for :session, url: sessions_path do |f| %>
  <%= f.input :username, :required =>false, :label => 'Username',:placeholder => 'Username' %>
  <%= f.input :password, :required =>false, :label => 'Password',:placeholder => 'Password' %>

  <%= f.button :submit, "Log in", class: "btn-primary" %>
<% end %>

<% if @current_account %>
  <%= link_to('Logout', logout_path)%>
<% end %>
