<section class=jumbotron>
  <h1><%= @problem.name %></h1>

  <p class='lead'>
    <%= @problem.description %>
  </p>
</section>

<table class="table table-striped">
  <caption>Attachments</caption>
  <thead>
    <tr>
      <th scope="col">Filename</th>
      <th scope="col">Type</th>
      <th scope="col">Content Type</th>
      <th class="actions" scope="col" colspan="2">Actions</th>
    </tr>
  </thead>

  <% @problem.attachments.each do |attachment| %>
      <tbody>
        <tr>
          <th scope="row"><%= attachment.original_filename %></th>
          <td><%= attachment.attachment_type %></td>
          <td><%= attachment.content_type %></td>
          <td><%= link_to 'Download', attachment %></td>
        </tr>
      </tbody>
    <br>
  <% end %>
</table>

<%= link_to "Submit Solution", new_submission_path(problem_id: @problem.id), class: 'btn btn-primary' %>
<%= link_to 'Back', problems_path, class: 'btn btn-secondary' %>
